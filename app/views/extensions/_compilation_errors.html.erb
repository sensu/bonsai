<%- errors = compilation_errors(extension, version) %>
<% if errors.any? && policy(extension).view_asset_errors? %>
  <div class="compilation-errors">
    <details open>
      <summary>This <%= t('nouns.extension') %> has compilation errors</summary>
      <ul>
        <% errors.each do |error| %>
          <li class="compilation-error">
            <%= error %>
          </li>
        <% end %>
      </ul>
    </details>
  </div>
<% end %>
